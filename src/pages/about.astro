---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import TeamCard from "../components/TeamCard.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="About Us - Oman Enterprises"
  description="Learn about Oman Enterprises' journey, vision, and team. Trusted business solutions provider with presence in Kolkata and Noida."
>
  <Header />

  <!-- About Section -->
  <section
    class="bg-gradient-to-r from-primary to-blue-600 text-white py-20 mt-20"
  >
    <div class="container mx-auto px-6 md:px-12 text-center">
      <h2 class="text-4xl font-bold mb-4">About Oman Enterprises</h2>
      <p class="text-lg leading-relaxed max-w-3xl mx-auto">
        Oman Enterprises is a trusted name in the business landscape, delivering
        top-tier staffing, recruitment, and enterprise solutions. With a strong
        presence in Kolkata and Noida, our team is committed to driving growth
        and innovation for our clients.
      </p>
    </div>
  </section>

  <!-- Leadership Section -->
  <section class="py-20 bg-gray-100">
    <div class="container mx-auto px-6 md:px-12">
      <h3 class="text-3xl font-bold text-center text-secondary mb-12">
        Our Leadership Team
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
        <TeamCard
          name="Founder & CEO"
          role="Strategic Leadership"
          expertise="Visionary leader with extensive experience in business development and international partnerships."
          image="https://images.pexels.com/photos/2182970/pexels-photo-2182970.jpeg"
          linkedin="#"
        />

        <TeamCard
          name="Operations Head"
          role="Process Excellence"
          expertise="Expert in operational efficiency and team management with a focus on quality delivery."
          image="https://images.pexels.com/photos/17582358/pexels-photo-17582358.jpeg"
          linkedin="#"
        />

        <TeamCard
          name="Technology Director"
          role="Digital Innovation"
          expertise="Leading digital transformation initiatives and IT solutions development."
          image="https://images.pexels.com/photos/15399144/pexels-photo-15399144.jpeg"
          linkedin="#"
        />
      </div>
    </div>
  </section>

  <!-- Tech Experts Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6 md:px-12">
      <h3 class="text-3xl font-bold text-center text-secondary mb-12">
        100+ <span class="text-blue-700">Tech Experts</span>
      </h3>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mb-10 text-gray-800"
      >
        <div class="col-span-2">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <ul class="space-y-2 list-disc list-inside">
              <li>Electronics & Telecom</li>
              <li>Laser Technology</li>
              <li>Semiconductors</li>
              <li>Renewable Energy</li>
              <li>Food Technology</li>
              <li>Fragrances & Flavours</li>
              <li>Automotive & Consumer Electronics</li>
              <li>Bio Sciences</li>
              <li>Medical Equipment</li>
              <li>Materials & Mining</li>
              <li>Heavy Engineering Tools</li>
              <li>Robotics & Automation</li>
            </ul>
            <ul class="space-y-2 list-disc list-inside">
              <li>Wireless Technology</li>
              <li>Audio/Visual Systems</li>
              <li>Computer Networks</li>
              <li>Oil & Gas</li>
              <li>FMCG</li>
              <li>Cosmetics</li>
              <li>Pharmaceuticals</li>
              <li>Biotechnology</li>
              <li>IoT & Wearables</li>
              <li>Industrial Equipment</li>
              <li>Packaging Solutions</li>
              <li>Environmental Sustainability</li>
            </ul>
          </div>

          <div class="mt-8 text-left">
            <a
              href="/career"
              class="text-blue-700 font-semibold hover:underline"
            >
              Explore Opportunities →
            </a>
          </div>
        </div>

        <div class="flex items-center justify-center">
          <div class="grid grid-cols-3 gap-2">
            <img
              src="https://images.pexels.com/photos/3184405/pexels-photo-3184405.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/1181696/pexels-photo-1181696.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/2379005/pexels-photo-2379005.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/614810/pexels-photo-614810.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/756831/pexels-photo-756231.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/936117/pexels-photo-936117.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/733872/pexels-photo-733872.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/3779421/pexels-photo-3779421.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/2378998/pexels-photo-2378998.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <img
              src="https://images.pexels.com/photos/462680/pexels-photo-462680.jpeg"
              class="rounded shadow w-24 h-24 object-cover"
            />
            <div class="mt-5 text-right">
              <a
                href="/leadership"
                class="text-blue-700 font-semibold hover:underline pr-30"
              >
                Leaderships →
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
