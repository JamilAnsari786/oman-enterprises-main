---
// components/TeamCard.astro
const { name, role, expertise, image, linkedin } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <div class="bg-gradient-to-br from-primary to-blue-600 h-32"></div>
  <div class="p-6 text-center -mt-16">
    <div class="w-24 h-24 rounded-full mx-auto mb-4 overflow-hidden shadow-lg border-4 border-white">
      <img src={image} alt={name} class="object-cover w-full h-full" />
    </div>
    <h3 class="text-xl font-bold text-secondary mb-2">{name}</h3>
    <p class="text-primary font-medium mb-3">{role}</p>
    <p class="text-gray-600 text-sm leading-relaxed">{expertise}</p>
    {linkedin && (
      <div class="mt-4">
        <a href={linkedin} class="text-primary hover:text-blue-600 transition-colors" target="_blank" rel="noopener noreferrer">
          <svg class="w-5 h-5 inline" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452z"/>
          </svg>
        </a>
      </div>
    )}
  </div>
</div>
