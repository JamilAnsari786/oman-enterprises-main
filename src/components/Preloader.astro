---
const text = "OMANENTERPRISES".split("");
---

<div
  id="preloader"
  class="fixed top-0 left-0 w-full h-screen z-[9999] flex items-center justify-center bg-blue-50 transition-opacity duration-500"
>
  <div class="loader-wrap perspective-1000 relative w-80 h-80">
    
    <div class="relative w-full h-full animate-spin-slow">
      <div
        class="preloader absolute w-full h-full [transform-style:preserve-3d]"
      >
        <div
          class="preloader-ring absolute w-full h-full [transform-style:preserve-3d] animate-rotate-ring"
        >
          {
            Array.from({ length: 30 }).map((_, i) => (
              <div
                class="preloader-sector absolute top-1/2 left-1/2 font-extrabold text-blue-700 text-2xl md:text-3xl"
                style={`transform: rotateY(${i * 24}deg) translateZ(160px); animation-delay: ${i * 0.05}s;`}
              >
                {text[i % text.length]}
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>

<style is:global>
  @keyframes rotate-ring {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(360deg); }
  }

  @keyframes spin {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(360deg); }
  }

  .animate-rotate-ring {
    animation: rotate-ring 5s linear infinite;
  }

  .animate-spin-slow {
    animation: spin 15s linear infinite;
  }

  .perspective-1000 {
    perspective: 1000px;
  }

  /* Optional: You can tweak font visibility here */
  .preloader-sector {
    backface-visibility: visible;
     text-shadow: 0 0 3px rgba(59, 130, 246, 0.6);
  }
</style>

<script>
  setTimeout(() => {
    const preloader = document.getElementById("preloader");
    if (preloader) {
      preloader.style.opacity = "0";
      preloader.style.pointerEvents = "none";
      setTimeout(() => {
        preloader.style.display = "none";
      }, 500);
    }
  }, 500);
</script>
